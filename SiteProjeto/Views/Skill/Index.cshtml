@model IEnumerable<Infrastructure.Models.Skill>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_PortfolioLayout.cshtml";
}

<div class="d-flex row-hl">
    <h1 class="item-hl">Habilidades</h1>

    <div class="item-hl ml-auto">
        <a asp-action="Save" class="btn btn-primary">Novo</a>
    </div>
</div>

<table class="table table-hover table-bordered">
    <thead>
        <tr class="table-secondary">
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aptitude)
            </th>
            <th class="column-actions">
                Ações
            </th>
        </tr>
    </thead>
    <tbody id="tbodyLoad">
        
    </tbody>
</table>

@section Scripts {
    <script src="~/js/skill.js"></script>
}
